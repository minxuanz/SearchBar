{
  "manifest_version": 3,
  "name": "Simple Search Bar",
  "version": "1.0",
  "description": "A simple Google search bar overlay.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Open search bar"
    }
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "hello.png",
    "48": "hello.png",
    "128": "hello.png"
  }
}
